{
  "compilerOptions": {
    "lib": [
      "ES2021",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ESNext",
    "rootDir": "./src",
    "declaration": true,
    "alwaysStrict": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./lib"
    //    "./node_modules"
  ]
}
